@{
    ViewData["Title"] = "Feedback";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .button.active {
        background-color: #4e73df;
        color: white;
    }

    .button:hover {
        background-color: #858796;
    }
</style>
<div style="margin-top: 20px" class="text-center">

    <h1>Feedback</h1>
    <div style="margin: auto; width: 600px" class="alert alert-info" role="alert">
        Provide us your feedback about BrainBoost. You can rate the app or write specific comment about anything.
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-md-6">

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="rate">Rate:</label>
                <input type="number" class="form-control" id="rate" name="Rate" min="1" max="5" required>
            </div>
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" id="comment" name="Comment" rows="3" required></textarea>
            </div>
            <button style="margin-top: 30px" type="submit" class="w-100 btn button active">Save</button>
            @Html.AntiForgeryToken()
        </form>
        </div>
    </div>
