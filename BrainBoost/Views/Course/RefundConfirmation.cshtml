@{
    var courseName = TempData["CourseName"];
    var coursePrice = TempData["CoursePrice"];
    var courseCurrency = TempData["CourseCurrency"];
}

<h1>@ViewData["Title"]</h1>

<h2 style="color:black;">Are You sure You want to refund money from course: @courseName, which costs @coursePrice @courseCurrency?</h2>

<a asp-action="RefundForm" class="btn btn-primary">Yes</a>

<a asp-action="MyCourses" class="btn btn-secondary">No</a>