@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<style>
    body {
        font-family: Ubuntu;
    }

    h1 {
        font-size: 24px;
    }

    p {
        font-size: 16px;
    }

    form {
        margin-bottom: 20px;
    }

    label {
        font-size: 16px;
        display: block;
        margin-bottom: 10px;
        font-weight: normal;
    }

    input[type="text"] {
        width: 200px;
        padding: 5px;
        font-size: 14px;
        border: 1px solid #ccc;
    }

    .error-message {
        max-width: 150px; /* Adjust the maximum width as needed */
        margin: 10px auto; /* Center the error message horizontally */
    }
</style>

<div class="row">
    <div class="col-md-4">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <p>Please enter the verification code sent to your email.</p>
            <form id="verificationForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.VerificationCode"></label>
                <input asp-for="Input.VerificationCode" class="form-control" autocomplete="off" aria-required="true" />
                <span asp-validation-for="Input.VerificationCode" class="text-danger"></span>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <br />
                        <div class="alert alert-danger">
                            <strong>Error:</strong> @TempData["ErrorMessage"]
                        </div>
                    }
                
            </div>
            <button id="verifySubmit" type="submit" class="w-100 btn btn-lg btn-primary">Verify</button>
            </form>
    </div>

    
</div>



